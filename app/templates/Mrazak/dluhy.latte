{block content}

<h1 n:inner-block="title">
  Dluhy
</h1>

{snippet dluznici}
{if $dluznici}
<table>
<thead>
  <tr>
    <th>Kupec</th>
    <th>Dluh</th>
  </tr>
</thead>
<tbody>
  <tr n:foreach="$dluznici as $jmeno => $dluh">
    <td>{$jmeno} </td>
    <td><a n:if="$dluh" title="Smáznout dluh od {$jmeno}" n:href="dluh!, $jmeno" class="ajax button tiny">{$dluh} Kč</a> </td>
  </tr>
</tbody>
</table>

{else}
  <div class="alert-box info">Konečně nikdo nic nedluží.</div>
{/if}
{/snippet}
