{block content}

<h1 n:inner-block="title">
  Dluhy
</h1>

{snippet dluznici}
{if $dluznici}
<dl class="dl-horizontal">
  {foreach $dluznici as $jmeno => $dluh}
  <dt>{$jmeno}</dt>
  <dd><a n:if="$dluh" title="Smáznout dluh od {$jmeno}" n:href="dluh!, $jmeno" class="ajax btn btn-success">{$dluh} Kč</a></dd>
  {/foreach}
</dl>
{else}
  <div class="alert alert-info">Konečně nikdo nic nedluží.</div>
{/if}
{/snippet}
