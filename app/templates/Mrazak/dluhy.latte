{block content}

<h1 n:inner-block="title">
  Dluhy
</h1>

{snippet dluznici}
<table id="dluznici" class="table table-striped">
<thead>
  <tr>
    <th class="col-xs-1">Dluh</th>
    <th>Kupec</th>
  </tr>
</thead>
<tbody>
  <tr n:foreach="$kupci as $kupec">
    <td><a n:if="$kupec->dluh" title="{$kupec->jmeno}" n:href="dluh!, $kupec->jmeno" class="ajax btn btn-primary">{$kupec->dluh} Kč</a></td>
    <td>{$kupec->jmeno}</td>
  </tr>
</tbody>
</table>
{/snippet}
